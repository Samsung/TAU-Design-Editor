{
    "name": "input-text",
    "label": "Input Text",
    "selector": "input[type=text], .ui-text-input-container, .ui-text-input-container.ui-text-input-type-text",
    "baseElementSelector": "input[type=text]",
    "attachable": true,
    "displayOrderWeight": 900,
    "type": "standalone-component",
    "textEditable": false,
    "resources": {
      "css": [
        "./styles/input-text.css"
      ],
      "icon": {
          "wearable": "./input-text.png",
          "mobile": "./input-text-mobile.png",
          "tv": "./input-text-mobile.png"
      }
    },
    "generator": {
      "constructor": "tau.widget.TextInput",
      "parameter": {
        "options": {}
      }
    },
    "template": "<input type=\"text\" data-outside-div=\"true\"/>",
    "snippet": [
      {
        "snippet": "<input type=\"text\" data-outside-div=\"true\" name=\"${5:mytext}\" id=\"${3:text-test}\"/>\n<label for=\"${4:text-test}\">${1:InputText}</label>",
        "displayText": "inputText",
        "description": "Enter your text."
      }
    ],
	"resizable": {
		"vertical": false,
		"horizontal": true
	  },
    "draggable": true
  }
